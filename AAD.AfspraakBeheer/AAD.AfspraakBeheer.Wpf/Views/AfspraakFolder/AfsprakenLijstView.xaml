    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom" Background="Transparent">
            <TextBox Text="Aantal Afspraken: " Background="Transparent" BorderThickness="0,2"/>
            <TextBox x:Name="lblAantal" Text="{Binding ElementName=lstAfspraken, Path=Items.Count, Mode=OneWay}" Background="Transparent"/>
        </StatusBar>
        <TextBlock Text="{Binding Titel}" Margin="10,10,10,10" FontSize="22" DockPanel.Dock="Top"></TextBlock>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="1" x:Name="lstAfspraken" ItemsSource="{Binding Afspraken, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding GeselecteerdeAfspraak}" >
            <ListView.View>
                <GridView x:Name="grdAf">
                    <GridViewColumn Header="Eigenaar" DisplayMemberBinding="{Binding Eigenaar.Naam}"  Width="70"/>
                    <GridViewColumn Header="Agenda Soort" DisplayMemberBinding="{Binding Agenda.Naam}"  Width="80" />
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding  AfspraakId}" Width="25" />
                    <GridViewColumn Header="Titel" DisplayMemberBinding="{Binding Titel}" Width="110" />
                    <GridViewColumn Header="StartTijd" DisplayMemberBinding="{Binding StartTijd}" Width="80" />
                    <GridViewColumn Header="EindTijd" DisplayMemberBinding="{Binding EindTijd}" Width="80" />
                </GridView>
            </ListView.View>
        </ListView>
       </Grid>
    </DockPanel>
</UserControl>
